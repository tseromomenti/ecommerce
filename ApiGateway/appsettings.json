{
  "Jwt": {
    "Issuer": "ECommerceOrderingSystem",
    "Audience": "ECommerceOrderingSystem.Client",
    "SigningKey": "super-secret-dev-signing-key-change-me"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:4200" ]
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v1/auth/{**catch-all}"
        }
      },
      "chat-v1-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/v1/chat/{**catch-all}"
        }
      },
      "inventory-v1-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/v1/inventory/{**catch-all}"
        }
      },
      "admin-inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/v1/admin/{**catch-all}"
        }
      },
      "cart-v1-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/v1/cart/{**catch-all}"
        }
      },
      "orders-v1-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/v1/orders/{**catch-all}"
        }
      },
      "payments-v1-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/v1/payments/{**catch-all}"
        }
      },
      "legacy-chat-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/chat/{**catch-all}"
        }
      },
      "legacy-inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/inventory"
          }
        ]
      },
      "legacy-order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/order/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "chat-cluster": {
        "Destinations": {
          "chat-service": {
            "Address": "http://localhost:5021"
          }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "inventory-service": {
            "Address": "http://localhost:5068"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "order-service": {
            "Address": "http://localhost:5123"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user-service": {
            "Address": "http://localhost:5032"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "payment-service": {
            "Address": "http://localhost:5042"
          }
        }
      }
    }
  }
}
