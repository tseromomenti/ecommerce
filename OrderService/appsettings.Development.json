{
  "Jwt": {
    "Issuer": "ECommerceOrderingSystem",
    "Audience": "ECommerceOrderingSystem.Client",
    "SigningKey": "super-secret-dev-signing-key-change-me"
  },
  "Services": {
    "PaymentService": "http://localhost:5042"
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:4200" ]
  },
  "ConnectionStrings": {
    "DbConnection": "Server=localhost,1433;Database=Orders;User Id=sa;Password=ComplexPassword123!;TrustServerCertificate=True;Encrypt=False",
    "MessageBrokerConnection": "amqp://guest:guest@localhost:5672"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.ApplicationInsights" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
